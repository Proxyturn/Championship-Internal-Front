@model Championship_Internal_Front.Models.User

@{
    ViewData["Title"] = "MyProfile";
}

<div class="login-page bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 offset-lg-1">
                <h3 class="mb-3">Meu Perfil</h3>
                <div class="bg-white shadow rounded">
                    <div class="row">
                        <div class="pe-0">
                            <div class="form-left h-100 py-5 px-5">
                                <form asp-controller="ApiUser" asp-action="EditUser" class="row g-4">
                                    <div class="col-12">
                                        <label>Nome<span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <input asp-for="Id" hidden="hidden" class="form-control" />
                                            <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                                            <input asp-for="Name" type="text" Name="Name" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <label>Idade<span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                                            <input asp-for="Age" type="number" Name="Age" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <label>Email<span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <div class="input-group-text"><i class="bi bi-envelope-fill"></i></div>
                                            <input asp-for="Email" Name="Email" class="form-control" >
                                        </div>
                                    </div>
                                    
                                    <div class="col-12">
                                        <button type="submit" value="EditUser" class="btn btn-success px-4 float-end mt-4">Confirmar Edição</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    a {
        text-decoration: none;
    }

    .login-page {
        width: 100%;
        height: 100vh;
        display: inline-block;
        display: flex;
        align-items: center;
    }

    .form-right i {
        font-size: 100px;
    }
</style>

