@model IEnumerable<Championship_Internal_Front.Models.ChampionshipInternal>


@{
    ViewData["Title"] = "List";
}


<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
          <h1></h1>
          <p></p>
            <h1>Campeonatos</h1>
           <div align="left">
               <a asp-controller="ApiChampionship" asp-action="Add" class="btn btn-success">Criar Campeonato</a>
           </div>

          </div>
          <div class="col-sm-6">
            @*<ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Contacts</li>
            </ol>*@
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        
          <div class="row">
            
      @foreach (var item in Model)
      {         
          
                    <div class=" mb-2 col-12 col-sm-6 col-md-6 d-flex flex-fill align-items-stretch flex-column">
                        <div class="card shadow-lg p-3 mb-5 bg-body rounded bg-light mb-3 d-flex flex-fill" style="width: 24rem;height:24rem;">
                            <form asp-controller="ApiChampionship" asp-action="GetChampionshipById" method="get">
                <div class="card-header">
                                    <b>Campeonato:</b> @Html.DisplayFor(modelItem => item.Title)@if (item.Status == Championship_Internal_Front.Enums.ChampionshipStatusEnum.OnGoing)
                                    {
                                        <span class="badge bg-info">Ocorrendo</span>
                                    }
                                    else if (item.Status == Championship_Internal_Front.Enums.ChampionshipStatusEnum.Finished)
                                    {
                                        <span class="badge bg-danger">Finalizado</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Aberto</span>
                                    }
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><b>Descrição:</b> @Html.DisplayFor(modelItem => item.Description)</li>
                    <li class="list-group-item"><b>Data de Início:</b> @Html.DisplayFor(modelItem => item.StartDate)</li>
                    <li class="list-group-item"><b>Total de Fases:</b> @Html.DisplayFor(modelItem => item.TotalPhases)</li>
                </ul>
                    <form asp-controller="ApiChampionship" asp-action="GetChampionshipById" method="get">
                        <div class="card-body" align="right">
                            <div class="text-right">
                                <input type="text" Name="status" hidden="hidden" class="form-control" value="@Html.DisplayFor(modelItem => item.Status)">
                                <input type="text" Name="championship_id" hidden="hidden" class="form-control" value="@Html.DisplayFor(modelItem => item.Id)">
                                <div class="mt-23">
                                    <button type="submit" value="GetChampionshipById" class="btn btn-primary ">Mais Detalhes</button>
                                </div>
                            </div>
                        </div>
                    </form>

                        </form>
              </div>
                    </div>
          
        
       }

        <!-- /.card-body -->
        </div>
        <!-- /.card-footer -->
        </section>
      </div>
      <!-- /.card -->
    
    <!-- /.content -->
  <!-- /.content-wrapper -->