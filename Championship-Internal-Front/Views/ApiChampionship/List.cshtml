@model IEnumerable<Championship_Internal_Front.Models.ChampionshipInternal>


@{
    ViewData["Title"] = "List";
}


<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
          <h1></h1>
          <p></p>
            <h1>Campeonatos</h1>
           <div align="left">
               <a asp-controller="ApiChampionship" asp-action="Add" class="btn btn-success">Criar Campeonato</a>
           </div>

          </div>
          <div class="col-sm-6">
            @*<ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Contacts</li>
            </ol>*@
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
      <!-- Default box -->
      <div class="card card-solid">
      @foreach (var item in Model)
      {
        
        <div class="card-body pb-0">
          <div class="row">
            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
              <div class="card bg-light d-flex flex-fill">
                <div class="card-body pt-0">
                  <div class="row">
                    <div class="col-7">
                      <h2 class="lead"><b>@Html.DisplayFor(modelItem => item.Title)</b></h2>
                      <p class="text-muted text-sm"><b>Descrição: </b> @Html.DisplayFor(modelItem => item.Description) </p>
                      <ul class="ml-4 mb-10 fa-ul text-muted">
                        <li class="medium"><span class="fa-li"><i class="fas fa-lg fa-calendar"></i></span> Data de Início: @Html.DisplayFor(modelItem => item.StartDate)</li>
                        <li class="medium"><span class="fa-li"><i class="fas fa-lg fa-user"></i></span>Fases: @Html.DisplayFor(modelItem => item.TotalPhases)</li>
                      </ul>
                    </div>
                  </div>
                </div>
                <form asp-controller="ApiChampionship" asp-action="GetChampionshipById" method="get">
                  <div class="card-footer">
                    <div class="text-right">
                        <input type="text" Name="status" hidden="hidden" class="form-control" value="@Html.DisplayFor(modelItem => item.Status)">
                        <input type="text" Name="championship_id" hidden="hidden" class="form-control" value="@Html.DisplayFor(modelItem => item.Id)">
                        <button type="submit" value="GetChampionshipById" class="btn btn-primary btn-block">Mais Detalhes</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        
       }
        <!-- /.card-body -->
        <div class="card-footer">
          <nav aria-label="Contacts Page Navigation">
            <ul class="pagination justify-content-center m-0">
              <li class="page-item active"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">4</a></li>
              <li class="page-item"><a class="page-link" href="#">5</a></li>
              <li class="page-item"><a class="page-link" href="#">6</a></li>
              <li class="page-item"><a class="page-link" href="#">7</a></li>
              <li class="page-item"><a class="page-link" href="#">8</a></li>
            </ul>
          </nav>
          
        </div>
        </div>
        <!-- /.card-footer -->
        </section>
      </div>
      <!-- /.card -->
    
    <!-- /.content -->
  <!-- /.content-wrapper -->