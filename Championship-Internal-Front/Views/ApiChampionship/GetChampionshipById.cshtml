@model Championship_Internal_Front.Models.ChampionshipInternal

@{
    ViewData["Title"] = "GetChampionshipById";
}

<section class="content-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1></h1>
        <p></p>
        <div class="card card-info">
          <div class="card-header">
            <h3 class="card-title">Detalhes do Campeonato</h3>
          </div>
          <div class="card-body">
            <div class="form-group">
              <label for="title">Título</label>
              <input contenteditable="false" type="text" class="form-control title" value="@Html.DisplayFor(modelItem => Model.Title)">
            </div>
            <div class="form-group">
              <label for="description">Descrição</label>
              <textarea contenteditable="false" id="descricao" class="form-control description" rows="4" value="@Html.DisplayFor(modelItem => Model.Description)"></textarea>
            </div>
            <div class="form-group">
              <label for="start_date">Data de Início</label>
              <input contenteditable="false" type="datetime-local" class="form-control start-date" value="@Html.DisplayFor(modelItem => Model.StartDate)">
            </div>
            <div class="form-group">
              <label for="total_phases">Total de Fases</label>
              <input contenteditable="false" type="number" class="form-control phases" value="@Html.DisplayFor(modelItem => Model.TotalPhases)">
            </div>
            <div class="form-group">
              <label for="winnerid">Time Vencedor</label>
              <input contenteditable="false" type="text" class="form-control first" value="@Html.DisplayFor(modelItem => Model.WinnerTeam)">
            </div>
            <div class="form-group">
              <label for="secondid">Segundo Lugar</label>
              <input contenteditable="false" type="text" class="form-control second" value="@Html.DisplayFor(modelItem => Model.SecondTeam)">
            </div>
            <div class="form-group">
              <label for="thirdid">Terceiro Lugar</label>
              <input contenteditable="false" type="text" class="form-control third" value="@Html.DisplayFor(modelItem => Model.ThirdTeam)">
            </div>
            <div class="col-12">
              <a asp-controller="ApiChampionship" asp-action="DeleteChampionship" href="#" class="btn btn-danger">Deletar Campeonato</a>
              <input asp-controller="ApiChampionship" asp-action="EditChampionship" type="submit" value="Editar Campeonato" class="btn btn-warning">
            </div>
